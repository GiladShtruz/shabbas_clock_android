<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הגדרת שעון מעורר"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- כפתור שעה -->
        <Button
            android:id="@+id/timeButton"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="00:00"
            android:textSize="36sp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="16dp" />

        <!-- בחירת יום -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/dayChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:singleSelection="true"
            app:chipSpacingHorizontal="8dp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- טקסט זמן עד צלצול -->
        <TextView
            android:id="@+id/timeUntilText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="יצלצל בעוד..."
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:gravity="center"
            android:minHeight="24dp"
            android:layout_marginBottom="24dp" />

        <!-- צלצול -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צלצול:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/ringtoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="צלצול ברירת מחדל"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/changeRingtoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שנה צלצול"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginBottom="16dp" />

        <!-- משך צלצול -->
        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משך צלצול: 10 שניות"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/durationSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- רטט -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="רטט:"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/vibrateSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- עוצמת קול -->
        <TextView
            android:id="@+id/volumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עוצמת קול: 70%"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/volumeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- כפתורים -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ביטול"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="הוסף"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>